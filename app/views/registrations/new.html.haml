#page
  %header#header.site-header
    = render "registration_header"

  %main#main.site-main
    .container
      .row
        .col-md-6.col-md-offset-3.mt50
          = form_for @registration do |f|
            .form-group
              = f.email_field :email, placeholder: "email address", class: "form-control input-lg"
            = f.submit "Sign up to Hear More", class: "btn btn-success btn-lg"
      .row.mt50
        .col-md-6.col-md-offset-3.text-left
          %i.fa.fa-envelope.mr10
          We promise never do anything uncool with your info

