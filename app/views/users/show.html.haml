.row
  .col-lg-8
    .ibox.float-e-margins
      .ibox-title
        %h5
          Add your cat
          %small so we can start tracking
      .ibox-content
        .row
          .col-sm-6.b-r
            %h3.m-t-none.m-b Sign in
            %p Sign in today for more expirience.
            %form{:role => "form"}
              .form-group
                %label Email
                %input.form-control{:placeholder => "Enter email", :type => "email"}/
              .form-group
                %label Password
                %input.form-control{:placeholder => "Password", :type => "password"}/
              %div
                %button.btn.btn-sm.btn-primary.pull-right.m-t-n-xs{:type => "submit"}
                  %strong Log in
                %label
                  %input.i-checks{:type => "checkbox"}/
                  Remember me
          .col-sm-6
            %h4 Not a member?
            %p You can create an account:
            %p.text-center
              %a{:href => ""}
                %i.fa.fa-sign-in.big-icon
            %button.btn.btn-primary.pull-right.m-t-n-xs{:type => "submit"}
              save
              %i.fa.fa-sign-in.big-icon
